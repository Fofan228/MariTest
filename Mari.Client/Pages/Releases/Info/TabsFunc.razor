@using Mari.Contracts.Releases
@* Todo: переделать под enum из Domain *@
<MudPaper Elevation="0" Class="py-6 border-b-2 ">
    <MudContainer>

        <MudText Class="pt-6 pb-6" Typo="Typo.h5" Align="Align.Center"> Изменить статус</MudText>

        @switch (ReleaseStatus)
        {
            case "Testing":
                <MudButton Color="Color.Primary" FullWidth="true" Variant="Variant.Filled" Class="mb-2 rounded-pill">Одобрить
                </MudButton>
                <MudButton Color="Color.Primary" FullWidth="true" Variant="Variant.Filled" Class="mb-2 rounded-pill">Отправить в
                    доработку</MudButton>
                break;

            case "Approved":
                <MudButton Color="Color.Primary" FullWidth="true" Variant="Variant.Filled" Class="mb-2 rounded-pill">Завершить
                </MudButton>
                break;

            case "Developing":
                <MudButton Color="Color.Primary" FullWidth="true" Variant="Variant.Filled" Class="mb-2 rounded-pill">Отправить в
                    тестирование</MudButton>
                break;

            case "Complete":
                break;

            case "Planning":
                <MudButton Color="Color.Primary" FullWidth="true" Variant="Variant.Filled" Class="mb-2 rounded-pill">Взять релиз
                    в работу</MudButton>
                break;

        }

    </MudContainer>
</MudPaper>
<MudPaper Elevation="0" Class="pb-6 border-b-2">
    <MudContainer>
        <MudText Class="pt-8 pb-6" Align="Align.Center" Typo="Typo.h5">Другое</MudText>
        <MudButton Color="Color.Primary" FullWidth="true" Variant="Variant.Filled" OnClick="ClickOnEditingReleaseInCard" Class="mb-2 rounded-pill">Редактировать Релиз</MudButton>
        <MudButton Color="Color.Primary" FullWidth="true" Variant="Variant.Filled" Class="mb-2 rounded-pill"> Посмотреть релизы этой платформы</MudButton>
    </MudContainer> 
</MudPaper>


@code {

    [Parameter]
    public Action ClickOnEditingReleaseInCard { get; set; } = () => { };

    [Parameter]
    public string ReleaseStatus { get; set; } = null!; 

}