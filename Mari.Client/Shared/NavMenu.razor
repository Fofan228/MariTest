@using Mari.Contracts.Common.Routes.Client
<AuthorizeView>
            <Authorized>
                   <MudDrawerHeader>
                       <MudPaper Elevation="0" Width="100%">
                           <MudLink Href="@ClientRoutes.Pages.Index" Underline="Underline.None"
                               Style="@($"color: {Colors.DeepPurple.Lighten3}")">
                               <MudText Align="Align.Center">
                                   @nameof(Mari)
                               </MudText>
                           </MudLink>
                           <MudDivider DividerType="DividerType.Middle" />
                       </MudPaper>
                   </MudDrawerHeader>
                   <MudAvatar Image="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQhR6hdp4YiDTfruKhi_ncPiKHMAfeW6oEreB1_L4mF&s"
                       Class="mx-auto" Style="width: 5em; height: 5em;" Color="Color.Primary">
                   </MudAvatar>
                   <MudPaper Elevation="0">
                       <MudContainer Class="py-4" MaxWidth="MaxWidth.Medium">
                           <MudText Align="Align.Center">
                               @context.User.Identity.
                           </MudText>
                   
                           <MudText Align="Align.Center">
                               @context.User.Identity?.Name!
                           </MudText>
                       </MudContainer>
                   </MudPaper>
                   <MudNavMenu Dense="true" Class="mx-auto" Margin="Margin.Normal">
                   
                       <MudNavLink Icon="@Icons.Filled.BuildCircle" IconColor="Color.Primary" Href="@ClientRoutes.Pages.Settings">
                           <MudText>Пользователи</MudText>
                       </MudNavLink>
                   
                       <MudNavLink Icon="@Icons.Filled.Archive" IconColor="Color.Primary" Href="@ClientRoutes.Pages.Archive">
                           <MudText>Архив</MudText>
                       </MudNavLink>
                   
                   </MudNavMenu>
                   

            </Authorized>
</AuthorizeView>

